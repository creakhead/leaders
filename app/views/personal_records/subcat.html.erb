<h1>Listing personal_records</h1>
 <%= session[:person_id] %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Person</th>
      <th>Event type</th>
      <th>Time</th>
      <th>Event Name</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @personal_records.each do |personal_record| %>
    <% if session[:person_id] == personal_record.id %>
      <tr style="background-color: yellow">
    <% else %>
    	<tr>
    <% end %>
      	<td><img src='<%= personal_record.person.image %>' /></td>
        <td><%= personal_record.person.name %></td>
        <td><%= personal_record.event_type_id %></td>
        <td><%= personal_record.result_time.strftime('%H:%M:%S') %></td>
        <td>
        	<%= link_to personal_record.event_name, :action=> 'event', :name => personal_record.event_name %>
        	<a target="_blank" href="<%= personal_record.url%>">[link]</a>
        </td>
        <td><%= personal_record.sub_cat %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Personal record', new_personal_record_path %>
